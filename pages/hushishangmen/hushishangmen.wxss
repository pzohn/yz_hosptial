/**index.wxss**/
.page{
  background:ghostwhite;
  align-items: center;
  flex-direction: column;
}
.home_grids{
  border-top: 1rpx solid #D9D9D9;
  overflow: hidden;
  margin-top: 10px
}
.cell{
  position: relative;
  float: left;
  padding: 20px 10px;
  width:33.33333333%;
  box-sizing: border-box;
  border-right: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
}
.cell image{
  display: block;
  width: 160rpx;
  height: 120rpx;
  margin: 14rpx 0 14rpx 0;
  background-size: cover;
  margin-left:28rpx;
}
.title{
  font-size: 20rpx;
  text-align: center
}
.price{
  font-size: 18rpx;
  text-align: center
}
.oldPrice{
  font-size: 15rpx;
  text-decoration: line-through;
}
.hr{
  border:1px solid #cccccc;
  opacity: 0.2;
}
.pagePic image{
  width:100%;
  height:500rpx;
}